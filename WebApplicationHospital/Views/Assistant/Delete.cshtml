@model WebApplicationHospital.Models.ApplicationUser

<h2>Delete Assistant</h2>

<div>
    <h4>Are you sure you want to delete this assistant?</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.DepartmentId</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <!-- Aynı URL'de POST isteği gönderiyoruz -->
        <input type="hidden" asp-for="Id" /> <!-- Kullanıcının Id'sini gizli bir input olarak gönderiyoruz -->
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a> <!-- Silmeyi iptal etmek için -->
    </form>
</div>
