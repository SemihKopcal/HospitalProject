@model WebApplicationHospital.Models.Calendar

<div class="container mt-4">
    <h2>Edit Calendar</h2>
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <!-- Calendar ID (Gizli Alan) -->
        <input type="hidden" asp-for="Id" />

        <!-- Başlangıç Tarihi -->
        <div class="mb-3">
            <label asp-for="StartDate" class="form-label">Start Date and Time</label>
            <input asp-for="StartDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <!-- Bitiş Tarihi -->
        <div class="mb-3">
            <label asp-for="EndDate" class="form-label">End Date and Time</label>
            <input asp-for="EndDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <!-- Kaydetme ve İptal Butonları -->
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>