@model WebApplicationHospital.Models.Calendar

<div class="container mt-4">
    <h2>Delete Calendar</h2>
    <p>Are you sure you want to delete this calendar?</p>

    <!-- Başlangıç ve Bitiş Tarihlerini Göster -->
    <dl class="row">
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <!-- Silme Formu -->
    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <!-- Calendar ID Gizli Alan -->
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>