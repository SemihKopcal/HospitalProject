@model WebApplicationHospital.Models.Calendar

<div class="container mt-4">
    <h2>Book Appointment</h2>
    <dl class="row">
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <form asp-action="BookPost" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="calendarId" value="@Model.Id" />
        <button type="submit" class="btn btn-success">Confirm Appointment</button>
    </form>
</div>