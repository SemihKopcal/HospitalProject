@model HospitalApp.Models.ApplicationUser

<h2>Edit Assistant</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" />
    </div>

    <div class="form-group">
        <label for="Department">Department</label>
        <input type="text" class="form-control" id="Department" asp-for="Department" />
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Phone Number</label>
        <input type="text" class="form-control" id="PhoneNumber" asp-for="PhoneNumber" />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" asp-for="Email" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
